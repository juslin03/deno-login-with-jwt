{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch Deno",
        "type": "pwa-node",
        "request": "launch",
        "program": "${workspaceFolder}/main.ts",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "deno",
        "runtimeArgs": [
            "run",
            "--inspect=127.0.0.1:9229",
            "--allow-all"
        ],
        "attachSimplePort": 9229
    }
    ]
}